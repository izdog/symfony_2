{% extends 'base.html.twig' %}

{% block title %}Zoo - Liste des animaux{% endblock %}

{% block superTitre %}Liste des animaux{% endblock %}
{% block body %}
    <div class="container">
        {% for animal in animaux %}
            <div class="row mt-3">
                <div class="col-2">
                    <img class="w-100" src="{{ asset('assets/images/' ~ animal.image) }}" alt="">
                </div>
                <div class="col">
                    <h2><a href="{{ path('display_animal', {'id' : animal.id}) }}">{{animal.nom|capitalize}}</a></h2>
                    <div><a class="btn btn-info" href="{{path('display_famille', {'id' : animal.famille.id })}}">{{ animal.famille.libelle|capitalize }}</a></div>
                    <div class="font-weight-bold">Description animal : </div>
                    <div>{{animal.description}}</div>
                    <div class="mt-2">
                        {% if animal.estDangereux %}
                            <span class="badge badge-danger p-2">Dangereux</span>
                        {% else %}
                            <span class="badge badge-secondary p-2">Cool</span>
                        {% endif %}                    
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
